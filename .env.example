# SMTP configuration (use your mail provider settings)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true

# Auth for sending mailbox
EMAIL_USER=youraddress@gmail.com
EMAIL_PASS=your_app_password_or_smtp_password

# Where to receive results (defaults to EMAIL_USER if not set)
RECEIVER_EMAIL=recipient@example.com

# Port (Render/Railway set PORT automatically)
PORT=3000
